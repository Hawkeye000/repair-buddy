<div class="row">
  <h1>Service Record</h1>
  <h2><%= link_to "#{@car.year} #{@car.make} #{@car.model}", user_car_path(
          @car.user_id, @car.id)  %></h2>
  <h3><%= @record.short_title %></h3>
</div>
<div class="row">
  <div class="col-lg-2">
    <b>Type</b> </br>
    <b>Mileage</b> </br>
    <b>Cost</b> </br>
  </div>
  <div class="col-lg-3">
    <%= @record.record_type %></br>
    <%= @record.mileage.to_s %></br>
    <%= number_to_currency @record.cost %></br>
  </div>
</div>
<div class="row">
  <div class="col-lg-4">
    <% unless @record.description.blank? %>
      <h4>Description</h4>
      <p><%= @record.description %></p>
    <% end %>
  </div>
</div>
<div class="row">
  <%= link_to 'Edit Record',
      edit_user_car_record_path(@record.user_id, @record.car_id, @record.id),
      class:'btn btn-default' %>
  <%= link_to 'Delete Record',
      user_car_record_path(@record.user_id, @record.car_id, @record.id),
      method:'delete', class:'btn btn-danger',
      data:{ confirm:'Are you sure you want to delete record?' } %>
</div>
